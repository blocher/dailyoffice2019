{
  "name": "netlify-headers-parser",
  "version": "4.0.1",
  "description": "Parses Netlify headers into a JavaScript object representation",
  "main": "src/index.js",
  "scripts": {
    "prepublishOnly": "npm ci && npm test",
    "test": "run-s format test:dev",
    "test:dev": "ava",
    "test:ci": "nyc -r lcovonly -r text -r json ava",
    "format": "run-s format:check-fix:*",
    "format:ci": "run-s format:check:*",
    "format:check-fix:lint": "run-e format:check:lint format:fix:lint",
    "format:check:lint": "cross-env-shell eslint $npm_package_config_eslint",
    "format:fix:lint": "cross-env-shell eslint --fix $npm_package_config_eslint",
    "format:check-fix:prettier": "run-e format:check:prettier format:fix:prettier",
    "format:check:prettier": "cross-env-shell prettier --check $npm_package_config_prettier",
    "format:fix:prettier": "cross-env-shell prettier --write $npm_package_config_prettier"
  },
  "config": {
    "eslint": "--ignore-path .gitignore --cache --format=codeframe --max-warnings=0 \"*.{js,md}\" \"{src,tests}/**/*.js\"",
    "prettier": "--ignore-path .gitignore --loglevel=warn \".github/**/*.{md,yml}\" \"*.{js,yml,json}\" \"{src,tests}/**/*.js\" \"!package-lock.json\" \"!CHANGELOG.md\""
  },
  "keywords": [
    "netlify"
  ],
  "engines": {
    "node": ">=10.18.0"
  },
  "author": "Netlify",
  "license": "MIT",
  "dependencies": {
    "escape-string-regexp": "^4.0.0",
    "is-plain-obj": "^3.0.0",
    "map-obj": "^4.2.1",
    "path-exists": "^4.0.0",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@netlify/eslint-config-node": "^3.2.2",
    "ava": "^3.0.0",
    "nyc": "^15.1.0",
    "test-each": "^2.0.1"
  },
  "files": [
    "src/**/*.js"
  ],
  "ava": {
    "files": [
      "tests/*.js"
    ],
    "verbose": true
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run format"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/netlify/netlify-headers-parser.git"
  },
  "bugs": {
    "url": "https://github.com/netlify/netlify-headers-parser/issues"
  },
  "homepage": "https://github.com/netlify/netlify-headers-parser#readme"
}
